\ifx\beamer@version\beamerNBU@version
\else
  \PackageWarningNoLine{beamerthemeNBU}{This version of beamerthemeNBU (\beamerNBU@version ) might not work with detected beamer class \beamer@version}
\fi

\mode<presentation>

\newif\ifbeamer@minimal
\newif\ifbeamer@nonav
\newif\ifbeamer@red
\newif\ifbeamer@gold
\newif\ifbeamer@numbers
\newif\ifbeamer@shadow
\newif\ifbeamer@nologo
\newif\ifbeamer@NBU

\beamer@minimalfalse
\beamer@nonavfalse
\beamer@redtrue
\beamer@goldfalse
\beamer@numbersfalse
\beamer@shadowtrue
\beamer@nologotrue
\beamer@NBUfalse

\DeclareOptionBeamer{compress}{\beamer@compresstrue}
\DeclareOptionBeamer{minimal}{\beamer@minimaltrue}
\DeclareOptionBeamer{nonav}{\beamer@nonavtrue}
\DeclareOptionBeamer{red}{\beamer@redtrue}
\DeclareOptionBeamer{gold}{\beamer@goldtrue}
\DeclareOptionBeamer{numbers}{\beamer@numberstrue}
\DeclareOptionBeamer{noshadow}{\beamer@shadowfalse}
\DeclareOptionBeamer{nologo}{\beamer@nologofalse}
\DeclareOptionBeamer{NBU}{\beamer@NBUtrue}

\ProcessOptionsBeamer

\ifbeamer@shadow
  \useinnertheme[shadow=true]{rounded}
\else
  \useinnertheme{rounded}
\fi
\useoutertheme{NBU}

\ifbeamer@red
  \usecolortheme{NBUred}
  \setbeamercolor{normal text}{fg=black,bg=white!95!NBUred}
\fi

\ifbeamer@gold
  \usecolortheme{NBUgold}
  \setbeamercolor{normal text}{fg=black,bg=white!95!NBUgold}
\fi

\ifbeamer@nonav
  \setbeamertemplate{navigation symbols}{}  % Removes navigation symbols.
\fi

\setbeamerfont{block title}{size={}}

\mode
<all>
